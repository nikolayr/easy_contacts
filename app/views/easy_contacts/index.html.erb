<%= title l(:easy_contacts_index) %>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Date Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @econtacts.each do |i| %>
      <tr>
        <td><%= i.first_name %></td>
        <td><%= i.last_name %></td>
        <td><%= i.date_created %></td>
        <td><%= link_to "Show", i %></td>
        <td><%= link_to "Edit", controller: "easy_contacts", action: "edit", id: i %></td>
        <td><%= link_to "Remove", i, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
  <% end %>
</table>
<br>
<%= link_to l(:add_new_easy_contact), new_easy_contact_path %>
