<%= title l(:easy_contacts_index) %>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Date Created</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @econtacts.each do |i| %>
      <tr>
        <td><%= link_to i.first_name, controller: 'easy_contacts', action: 'show', id: i %></td>
        <td><%= i.last_name %></td>
        <td><%= i.date_created %></td>
        <td></td>
        <td><%= link_to l(:button_edit), {controller: 'easy_contacts', action: 'edit', id: i},:class => 'icon icon-edit' %></td>
        <td><%= delete_link("easy_contacts/#{i.id}" ) %></td>
      </tr>
  <% end %>
</table>
<br>
<%= link_to l(:add_new_easy_contact), 'easy_contacts/new',{ class: 'icon icon-add'} %>

